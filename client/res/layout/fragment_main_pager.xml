<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/main_pager_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ImageButton
            android:layout_width="96dp"
            android:layout_height="@dimen/slideing_up_panel_height"
            android:background="@drawable/add_location_btn_bg"
            android:paddingBottom="16dp"
            android:src="@drawable/location_add" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="@dimen/slideing_up_panel_height"
            android:gravity="center_horizontal"
            android:paddingTop="50dp"
            android:text="Add to visit" />
    </FrameLayout>

    <TextView
        android:id="@+id/main_pager_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/slideing_up_panel_height"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/main_pager_button"
        android:padding="20dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/main_pager_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_pager_button"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1110dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/ic_launcher" >
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center|bottom"
                android:text="Test for scroll view"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/brought_by"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center|top"
                android:text="Content Content"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1110dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/ic_launcher" >
            </ImageView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>